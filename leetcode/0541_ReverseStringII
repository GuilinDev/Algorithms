class Solution {
    public String reverseStr(String s, int k) {
        char[] ch = s.toCharArray();
        for (int i = 0; i < ch.length; i += 2*k) {//每次跳跃2*k
            rev(ch, i, i + k);
        }
        return String.valueOf(ch);
    }
    
    private void rev(char[] ch, int i, int j) {//交换
        j = Math.min(ch.length, j) - 1;
        for (; i < j; i++, j--) {
            char tmp = ch[i];
            ch[i] = ch[j];
            ch[j] = tmp;
        }
    }
}
